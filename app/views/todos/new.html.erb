<div class="container">
  <h1>タスクの追加</h1>
  <%= form_with model: @todo do |form| %>
    <%= render 'layouts/error_message', model: form.object %>
    <%= form.text_field :title, placeholder: "タスクを入力する" %>
    <input type="submit" value="保存する">
  <% end %>

  <%= link_to '一覧に戻る', todos_path, class: "back" %>
</div>